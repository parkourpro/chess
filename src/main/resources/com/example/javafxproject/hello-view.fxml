<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"

          prefHeight="480.0" prefWidth="480.0">

  <!-- White squares -->
  <Rectangle GridPane.columnIndex="0" GridPane.rowIndex="0" fill="WHITE" width="60" height="60" />
  <Rectangle GridPane.columnIndex="1" GridPane.rowIndex="0" fill="BLACK" width="60" height="60" />
  <!-- Repeat the pattern for the first row -->
  <Rectangle GridPane.columnIndex="0" GridPane.rowIndex="1" fill="BLACK" width="60" height="60" />
  <Rectangle GridPane.columnIndex="1" GridPane.rowIndex="1" fill="WHITE" width="60" height="60" />
  <!-- ... Repeat the pattern for the entire chessboard -->

</GridPane>
